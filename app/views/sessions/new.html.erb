<p id="notice"><%= notice %></p>
<div class="home-container">
  <div class="hero-unit">
    <h1>Sign in</h1>
    <%= form_for(:session, :url => sessions_path) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email, :class => "email-field" %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, :class => "passwd-field" %>
      </div>
	    <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "remember me?" %>
      </div>
      <div class="">
        <%= f.submit "Sign in", :class => "btn primary" %>
      </div>
    <% end %>
  </div>
</div>