<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "span6" %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => "span6" %>
  </div>
	<div class="field">
    <%= f.label :remember_me %><br />
    <%= f.check_box :remember_me %>
  </div>
  <div class="">
    <%= f.submit "Sign in", :class => "btn primary" %>
  </div>
<% end %>