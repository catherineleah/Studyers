<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :scaffold %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Love+Ya+Like+A+Sister&v1' %>
  <%= javascript_include_tag 'jquery-1.6.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.14.min' %>
  <%= javascript_include_tag 'jquery_ujs' %>
  <%= javascript_include_tag 'jquery.jeditable.min' %>
  <%= javascript_include_tag 'jquery.cycle' %>
  <%= javascript_include_tag 'jquery.poshytip.min' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
	<!-- include_tiny_mce_if_needed  -->
</head>
<body>
<div id="container">
	<!-- Header -->
	<%= render 'layouts/header' %>
	<!-- /Header -->
	
	<!-- Errors -->
	<% flash.each do |key, value| %>
  	<div class="flash <%= key %>"><%= value %></div>
  <% end %>
	<!-- /Errors -->
	
	<!-- Main -->	
	<section id="main">
	  <%= yield %>		
	</section>
	<!-- /Main -->
	
	<!-- Footer -->
	<%= render 'layouts/footer' %>
	<!-- /Footer -->
	<div class="debugger" style="clear:both;">
          <%= debug(params) if Rails.env.development? %>
          <%= request.user_agent if Rails.env.development? %>
        </div>
</div>


</body>
</html>
