<%= javascript_include_tag 'lessons.js', 'jquery.tokeninput.js' %>
<%= form_for([@notebook, @lesson], :html => { :class => "span16"} ) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="side-menu">
  <a class="resource btn" id="show-embed" href="#">Embed lesson presentation</a>
  <a class="resource btn" id="share-lesson" href="#">Share this lesson</a>
</div>
<div id="side-resources">
  <div class="pull-resource" id="show-embed-form">
    <div class="alert-message block-message info">
      <a class="close" href="#">×</a>
      <p>If your lecturer or a classmate has provided you with an ID to this lesson's presentation add it here: </p>
      <div class="alert-actions">
        (<%= root_url %>class_resources/<input type="text" id="get-resource" class="span1 mini" />)
        <a href="#" class="btn small" id="fetch-resource">Get</a>
      </div>
    </div>
      <div class="presentation-embed">
      </div>
  </div>
  <div class="pull-resource" id="share-lesson-form">
    <div class="alert-message block-message info">
      <a class="close" href="#">×</a>
      <%= f.fields_for :shares do |builder| %>
        <%= builder.label :shared_ids, "Type the user names you wish to share the lesson with:" %>
        <%= builder.text_field :shared_ids, "data-pre" => @shared_ids %>
      <% end %>
    </div>
  </div>
</div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "span12 xlarge" %>
  </div>
    
  <div class="field">
    <%= f.text_area :body%>
  </div>
      <!--<input id="spellcheckinput" type="text"> <span id="spellcheckresult"></span>-->      
    
  <div class="field">
    <%= f.submit :id => "lesson_submit", :class => "btn primary" %>
  </div>

<% end %>