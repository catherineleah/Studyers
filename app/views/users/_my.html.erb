
  <div id="notebooks">
    <% @notebooks.each_with_index do |notebook, key| %>
      <div class="notebook notebook-<%= key %>">
        <h4>
          <%= link_to notebook.name, notebook_lessons_path(notebook), :class => "lesson-title" %>
        </h4>
        <div class="notebook-lessons">
          <% @lessons = notebook.lessons.limit(3).order("updated_at DESC") %>
          <% if @lessons.size > 0 %>
            <div class="lessons">
              <% @lessons.each do |lesson| %>
                <div class="lesson"><%= link_to lesson.title, notebook_lesson_path(notebook, lesson) %> </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to "+ Create a new lesson", new_notebook_lesson_path(notebook), :class => "new-lesson btn primary" %>
      </div>
    <% end %>  
  </div>