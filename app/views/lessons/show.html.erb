<div class="lesson-show-wrapper">
  <div class="lesson-show">
    <h3><%= @lesson.title %></h3>
    <%=sanitize @lesson.body %>
  </div>

  <div class="lesson-image">
    <div class="show-image">Show saved image from canvas</div>
    <%= image_tag @lesson.attachement.url, :class=>"attached-image" %>
  </div>

  <div class="user-menu">
    <% if @current_user.id == @lesson.user_id %>
      <%= link_to 'Edit lesson', edit_notebook_lesson_path %> |
    <% end %>
      <%= link_to 'Back to lessons list', notebook_lessons_path %>
  </div>
</div>
