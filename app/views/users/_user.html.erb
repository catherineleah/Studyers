  <div class="user-details">
      <div id="gravatar">
        <%= gravatar_for @user %>
      </div>
      <div id="name">
        <%= @user.name %>
      </div>
      <div class="friendship">
        <% if @user.friend_with? current_user %>
          you are friends with <%= @user.name %>
        <% elsif !@user.friend_with? current_user and !@user.connected_with? current_user and @user != current_user %>
          <%= link_to "Add as a friend", invite_friend_path(@user) %>
        <% end %>
      </div>
  </div>
  <div id="notebooks">
    <span class="title">Some of <%= @user.name %>'s notebooks</span>
    <% @notebooks.each do |notebook| %>
      <div class="recent-notebook">
        <%= link_to notebook.name, notebook_lessons_path(notebook), :class => "lesson-title" %> 
      </div>
    <% end %>
  </div>
  <div id="lessons">
    <span class="title"><%= @user.name %> recently saved lessons</span>
    <% @lessons.each do |lesson| %>
      <div class="recent-lesson">
        <%= link_to lesson.title, notebook_lesson_path(lesson.notebook_id, lesson) %>
      </div>
    <% end %>
  </div>
