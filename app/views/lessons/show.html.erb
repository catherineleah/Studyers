<div class="banner lessons notebooks">
  <div class="container">
    <h2><%= @lesson.title %></h2>
  </div>
</div>
<div class="container">
<p id="notice"><%= notice %></p>
<div class="lessons_dash">
<div class="lesson-show-wrapper">
  <div class="lesson-show">
    <h3><%= @lesson.title %></h3>
    <% if @current_user.id != @lesson.user_id %>
      <h4><%= link_to @author.name, user_path(@author.id) %></h4>
    <% end %>
    <%= sanitize @lesson.body %>
  </div>

  <div class="user-menu">
    <%= link_to '← Notebook index', notebook_lessons_path %>
    <% if @current_user.id == @lesson.user_id %>
      <%= link_to 'Edit lesson', edit_notebook_lesson_path, :class => "btn-edit" %>
      <%= link_to_function("Print this lesson", "javascript:print()") %>
    <% end %>
  </div>
</div>
</div>
